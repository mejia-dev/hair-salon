@model HairSalon.Models.Stylist

<h3>@ViewBag.PageTitle</h3>
<h5>Are you sure you want to delete this stylist?</h5>
<p>This action can't be undone. Please reassign all associated clients prior to deleting this stylist.</p>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}

<div class="allPageNav">
  <br /><br />
  <button>@Html.ActionLink("Back to Details", "Details", new { id = Model.StylistId })</button>
  <button>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</button>
  <br />
  <button>@Html.ActionLink("Back to All Stylists", "Index")</button>
</div>