@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h3>@ViewBag.PageTitle</h3>
@if (@Model.Count == 0)
{
  <p>No clients have been added yet. Please add a client by clicking on the button below.</p>
}
else
{
  <div class="clientsList">
    @foreach (Client c in Model)
    {
      <div class="clientsListItem">
        <p>
          @Html.ActionLink(c.ClientName, "Details", new { id = c.ClientId })
          <em>Stylist: @Html.ActionLink(c.Stylist.StylistName, "Details", "Stylists", new { id = c.Stylist.StylistId })</em>
        </p>
      </div>
    }
  </div>
}
<br /><br />
<button>@Html.ActionLink("Add a Client", "Create")</button>

<div class="allPageNav">
  <br /><br />
  <button>@Html.ActionLink("Home", "Index", "Home")</button>
</div>