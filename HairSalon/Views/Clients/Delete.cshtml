@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>@ViewBag.PageTitle</h3>
<h5>Are you sure you want to delete this client?</h5>
<p>This action can't be undone.</p>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}

<div class="allPageNav">
  <br /><br />
  <button>@Html.ActionLink("Back to Details", "Details", new { id = Model.ClientId })</button>
  <button>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</button>
  <br />
  <button>@Html.ActionLink("Back to All Clients", "Index")</button>
</div>