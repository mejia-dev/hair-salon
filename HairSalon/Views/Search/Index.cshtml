@using HairSalon.Models;
<h3>@ViewBag.PageTitle</h3>

@if (@Model.Count == 0)
{
  <p>Your search returned no results. Please adjust your search keywords and try again.</p>
}
else if (@ViewBag.SearchType == "stylists")
{
  <div class="stylistsList">
    @foreach (Stylist s in Model)
    {
      <div class="stylistsListItem">@Html.ActionLink(s.StylistName, "Details", new { id = s.StylistId })</div>
    }
  </div>
} 
else
{
  <div class="clientsList">
    @foreach (Client c in Model)
    {
      <div class="clientsListItem">
        <p>
          @Html.ActionLink(c.ClientName, "Details", new { id = c.ClientId })
          <em>Stylist: @Html.ActionLink(c.Stylist.StylistName, "Details", "Stylists", new { id = c.Stylist.StylistId })</em>
        </p>
      </div>
    }
  </div>
}
<div class="allPageNav">
  <br /><br />
  <button>@Html.ActionLink("Add a Client", "Create", "Clients")</button>
  <button>@Html.ActionLink("Add a Stylist", "Create", "Stylists")</button><br />
  <button>@Html.ActionLink("Home", "Index", "Home")</button>
</div>